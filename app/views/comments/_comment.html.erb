<div class="comment">

  <div class="author">
    <p>
      <b> <%= comment.author.name %></b> 
      <%= comment.created_at.in_time_zone('Eastern Time (US & Canada)').strftime("%b %d %I:%M") %>
    </p>
  </div>

  <div class="comment-content">
    <%= comment.content %>
  </div>

  <% if current_user == comment.message.team.captain %>
    <%= button_to 'delete comment', 
      comment_path(comment),
      data: { confirm: 'Delete comment?' },
      method: :delete
    %>
  <% end %>

</div>
