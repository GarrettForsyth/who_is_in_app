<div class="container center">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table class="form">
    <tr>

      <td class="label"><%= f.label :email %></td>
      <td class="input"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>   
      <td class="label"><%= f.label :password %></td>
      <td class="input"><%= f.password_field :password, autocomplete: "off" %></td>
    </tr>
    <tr>
      <td class="label"></td>
      <td class="input">
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      </td>
    </tr>
    <tr>
      <td class="label"></td>
      <td class="input"><%= f.submit 'Log in' %></td>
    </tr>
    <tr>
      <td class="label"></td>
      <td class="input"><%= render 'devise/shared/links' %></td>
    </tr>
  </table>
  <% end %>
</div>
