<div class="message">
  <div class="author">
    <p>
      <b> <%= message.author.name %></b> 
      <%= message.created_at.in_time_zone('EST').strftime("%b %d %I:%M") %>
    </p>
    <% if current_user == message.author || current_user == message.team.captain %>
      <%= button_to 'delete message', message,
        method: :delete,
        data: { confirm: 'Delete message?' } %>
    <% end %>
  </div>
  <div class="content">
    <p> <%= message.content %></p>
  </div>
</div>
