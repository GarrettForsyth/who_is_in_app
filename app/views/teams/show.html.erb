<h1><%=@team.name %></h1>
<h3><%= @team.activity.name %></h3>
<%= link_to 'Upload Schedule', edit_team_path(@team) %>
<%= link_to 'Edit Team Information', edit_team_path(@team) %>
<%= link_to 'Invite', new_team_invitation_path(@team.id) %>

<% if @team.schedule? %>
  <% if @team.schedule.file.extension.downcase == 'pdf' %>
    <%= content_tag :iframe, '', src: @team.schedule_url %>
  <% else %>
    <%= image_tag(@team.schedule_url) if @team.schedule? %>
  <% end %>
<% end %>

<%= link_to 'Post a message', new_team_message_path(@team.id)%>

<div class="news-feed">
  <%= render @team.messages %>
</div>


